<%= render "shared/second_header"%>
<div class="main_login"> 
<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f|%>
  <div class="form_wrapper">
    <p class="user_title">ユーザーログイン</p>

    <p class="login_errors"><%= flash[:alert]%></p>

    <div class="form_group">
      <div class="email_form">
        <label class="form_text" for="user_email">メールアドレス</label>
      </div>
      <%= f.email_field :email, class:"input_box", autofocus: true %>
    </div>
    <div class="form_group">
      <div class="password_form">
        <label class="form_text" for="user_password">パスワード</label>
      </div>
      <%= f.password_field :password, class:"input_box" %>
    </div>
    <div class="submit_btn">
      <%= f.submit "ログイン", class: "user_btn"%>
    </div>
  </div>
  <% end %>
</div>
<%= render "shared/footer"%>

