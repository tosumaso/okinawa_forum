<%= render "shared/second_header"%>
<div class="main">
<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f|%>
  
    <p class="user_title">ユーザー新規登録</p>

    <%= render partial: 'shared/error_messages', locals: {model: @user}%>

    <div class="form_group">
      <div class="nickname_form">
        <label class="form_text">ニックネーム(10文字以内)</label>
      </div>
      <%= f.text_area :nickname, class:"input_box", rows: 1, maxlength: 10, autofocus: true %>
    </div>
    <div class="form_group">
      <div>
        <label class="form_text">メールアドレス</label>
      </div>
      <%= f.email_field :email, class:"input_box" %>
    </div>
    <div class="form_group">
      <div class="password_form">
        <label class="form_text">パスワード</label>
      </div>
      <%= f.password_field :password, class:"input_box"%>
    </div>
    <div class="form_group">
      <div class="password_form">
        <label class="form_text">パスワード(確認用)</label>
      </div>
      <%= f.password_field :password_confirmation, class:"input_box"%>
    </div>
    <div class="submit_btn">
      <%= f.submit "登録", class: "user_btn"%>
    </div>
  <% end %>
</div>
<%= render "shared/footer"%>