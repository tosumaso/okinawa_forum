
<div class="main">
<%= render "shared/header"%>
  <div class="post_contents">
    <h1 class="post_title">チャットルーム一覧</h1>

    <%= form_with(url: search_posts_path, local: true, method: :get, class: "search_form") do |form| %>
      <%= form.text_field :keyword, placeholder: "ポストを検索する", class: "search_input"%>
      <%= form.submit "検索", class: "search_btn"%>
    <% end %>

  <div class="post_lists">
    <% @posts.each do |post|%>
        <%= link_to (post_path(post)) do %>
        <li class="post_list">
        <div class="post_name"><%= post.name %></div>
        <div class="post_content"><%=post.content %></div>
        </li>
        <% end %>
    <% end %>
  </div>
  </div>
</div>
<%if user_signed_in?%>
<%= link_to(new_post_path, class: 'create_room') do %>
    <p class="create_room_text">ポスト作成</p>
<% end %>
<% end %>
<%= render "shared/footer"%>